@model BillOfLadingModel

@{
    ViewBag.Title = "Edit";
}

@Html.Partial("ActionNavPartial", ActionNav.Nothing)

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form">
        <h4>Edit BOL</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.HiddenFor(model => model.BillOfLadingId)
                    @Html.LabelFor(model => model.BillOfLadingNumber)
                    @Html.EditorFor(model => model.BillOfLadingNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BillOfLadingNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.DateShipped)
                    @Html.EditorFor(model => model.DateShipped, new { htmlAttributes = new { @class = "form-control datePicker" } })
                    @Html.ValidationMessageFor(model => model.DateShipped, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.ShippedFrom)
                    @Html.EditorFor(model => model.ShippedFrom, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ShippedFrom, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            @Html.EditorFor(model => model.ToStorage)
                            @Html.DisplayNameFor(model => model.ToStorage)

                            @Html.ValidationMessageFor(model => model.ToStorage, "", new { @class = "text-danger" })
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <div class="form-group">
            <div class="col-md-12">
                @Html.Action("EquipmentToEditForBOL", Model)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Create" class="btn btn-primary" /> | @Html.ActionLink("Cancel", "Index", "Home")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/form")
    @Scripts.Render("~/bundles/table")
}
