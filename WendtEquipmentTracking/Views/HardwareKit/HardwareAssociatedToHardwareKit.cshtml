@model IEnumerable<HardwareKitGroupModel>

<h4>Hardware</h4>

<table class="table table-condensed table-hover table-bordered table-styled">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ShippingTagNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.QuantityToShip)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingTagNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityToShip)
                </td>
            </tr>
        }
    </tbody>
</table>
