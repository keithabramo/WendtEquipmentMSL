@model HardwareKitModel

@{
    ViewBag.Title = "Create";
}

@Html.Partial("ActionNavPartial", ActionNav.CreateHardwareKit)

<form id="HardwareKitForm">
    <h4>Create a new Hardware Kit</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(model => model.HardwareKitNumber)
                @Html.EditorFor(model => model.HardwareKitNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HardwareKitNumber, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ExtraQuantityPercentage)
                @Html.EditorFor(model => model.ExtraQuantityPercentage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExtraQuantityPercentage, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</form>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            @Html.Partial("HardwareToAddToHardwareKit")
        </div>
    </div>
</div>

<div class="row">
    <div class="form-group">
        <input type="button" id="Save" value="Create" class="btn btn-primary" /> | @Html.ActionLink("Cancel", "Index", "Home")
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/form")
    @Scripts.Render("~/bundles/editor")
    @Scripts.Render("~/bundles/hardwareKitCreate")
}
