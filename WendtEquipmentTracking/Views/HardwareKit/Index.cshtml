@model IEnumerable<HardwareKitModel>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("ActionNavPartial", ActionNav.Nothing)

<h4>Hardware Kits</h4>

@if (Html.UserIsInRole(UserRoles.ReadWrite))
{
    <p>
        @Html.ActionLink("Create New Hardware Kit", "Create", null, new { @class = "btn btn-sm btn-primary" })
    </p>
}
@if (Model.Count() > 0)
{
    <table class="table table-condensed table-hover table-bordered table-styled my-datatable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HardwareKitNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExtraQuantityPercentage)
                </th>
                @if (Html.UserIsInRole(UserRoles.ReadWrite))
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HardwareKitNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExtraQuantityPercentage)
                    </td>
                    @if (Html.UserIsInRole(UserRoles.ReadWrite))
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.HardwareKitId }) |
                            @Html.ActionLink("Details", "Details", new { hardwareKitNumber = item.HardwareKitNumber }) |
                            @Ajax.ActionLink("Delete", "Delete", new { id = item.HardwareKitId }, new AjaxOptions { Confirm = "Are you sure you want to delete this hardware kit record?", OnSuccess = "DeleteSuccess", HttpMethod = "POST" })
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No Hardware Kits Found.</p>
}


@section Scripts {
    @Scripts.Render("~/bundles/table")
}
