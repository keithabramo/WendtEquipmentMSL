@model HardwareCommercialCodeModel

@{
    ViewBag.Title = "Edit";
}

@Html.Partial("ActionNavPartial", ActionNav.Nothing)

<h4>Hardware \ Commercial Code <br /><small>Edit</small></h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.PartNumber)
                    @Html.HiddenFor(model => model.HardwareCommercialCodeId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.EditorFor(model => model.PartNumber, new { htmlAttributes = new { @class = "form-control text-uppercase" } })
                    @Html.ValidationMessageFor(model => model.PartNumber, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Description)
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control text-uppercase" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CommodityCode)
                    @Html.EditorFor(model => model.CommodityCode, new { htmlAttributes = new { @class = "form-control text-uppercase" } })
                    @Html.ValidationMessageFor(model => model.CommodityCode, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" /> | @Html.ActionLink("Cancel", "Index")
        </div>
    </div>
}
