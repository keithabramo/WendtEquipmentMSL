@model IEnumerable<HardwareCommercialCodeModel>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("ActionNavPartial", ActionNav.Nothing)

<h4>Hardware \ Commercial Codes</h4>

@if (Html.UserIsInRole(UserRoles.ReadWrite))
{
    <p>
        @Html.ActionLink("Create Hardware \\ Commercial Code", "Create", null, new { @class = "btn btn-sm btn-primary" })
    </p>
}

<table class="table table-condensed table-hover table-bordered table-styled my-datatable hardwareCommercialCodeTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PartNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.CommodityCode)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>


@section Scripts {
    <script type="text/javascript">
            var canReadWrite = "@(Html.UserIsInRole(UserRoles.ReadWrite) ? "true" : "false")";
    </script>
    @Scripts.Render("~/bundles/table")
    @Scripts.Render("~/bundles/hardwareCommercialCodes")
}