@model IEnumerable<HardwareCommercialCodeModel>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("ActionNavPartial", ActionNav.Nothing)

<h4>Hardware \ Commercial Codes</h4>

@if (Html.UserIsInRole(UserRoles.ReadWrite))
{
    <p>
        @Html.ActionLink("Create New Work Order Price", "Create", null, new { @class = "btn btn-sm btn-primary" })
    </p>
}
@if (Model.Count() > 0)
{
    <table class="table table-condensed table-hover table-bordered table-styled my-datatable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PartNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommodityCode)
                </th>
                @if (Html.UserIsInRole(UserRoles.ReadWrite))
            {
                    <th></th>
            }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PartNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommodityCode)
                    </td>
                    @if (Html.UserIsInRole(UserRoles.ReadWrite))
                {
                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.HardwareCommercialCodeId }) |
                    @Ajax.ActionLink("Delete", "Delete", new { id = item.HardwareCommercialCodeId }, new AjaxOptions { Confirm = "Are you sure you want to delete this hardware \\ commercial code record?", OnSuccess = "DeleteSuccess", HttpMethod = "POST" })
                </td>
                }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No Hardware \ Commercial Codes Found.</p>
}


@section Scripts {
@Scripts.Render("~/bundles/form")
    @Scripts.Render("~/bundles/table")
}