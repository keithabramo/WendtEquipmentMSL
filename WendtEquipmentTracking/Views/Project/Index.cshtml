@model IEnumerable<ProjectModel>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("ActionNavPartial", ActionNav.Nothing)

<h4>Projects</h4>

@if (Html.UserIsInRole(UserRoles.ReadWrite))
{
    <p>
        @Html.ActionLink("Create New Project", "Create", null, new { @class = "btn btn-sm btn-primary" })
    </p>
}
@if (Model.Count() > 0)
{
    <table class="table table-condensed table-hover table-bordered table-styled my-datatable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FreightTerms)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShipToCompany)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShipToContact1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShipToContact2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShipToBroker)
                </th>
                @if (Html.UserIsInRole(UserRoles.ReadWrite))
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FreightTerms)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipToCompany) <br />
                        @Html.DisplayFor(modelItem => item.ShipToAddress) <br />
                        @Html.DisplayFor(modelItem => item.ShipToCSZ)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ShipToContact1))
                    {
                            @Html.DisplayFor(modelItem => item.ShipToContact1) <br />
                            @:Phone: @Html.DisplayFor(modelItem => item.ShipToContact1) <br />
                            @:Email: @Html.DisplayFor(modelItem => item.ShipToContact1)
                    }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ShipToContact2))
                    {
                            @Html.DisplayFor(modelItem => item.ShipToContact2) <br />
                            @:Phone: @Html.DisplayFor(modelItem => item.ShipToContact2) <br />
                            @:Email: @Html.DisplayFor(modelItem => item.ShipToContact2)
                    }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ShipToBroker))
                    {
                            @Html.DisplayFor(modelItem => item.ShipToBroker) <br />
                            @:Phone: @Html.DisplayFor(modelItem => item.ShipToBroker) <br />
                            @:Email: @Html.DisplayFor(modelItem => item.ShipToBroker)
                    }
                    </td>
                    @if (Html.UserIsInRole(UserRoles.ReadWrite))
                    {
                        <td class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }) |
                            @Ajax.ActionLink("Delete", "Delete", new { id = item.ProjectId }, new AjaxOptions { Confirm = "Are you sure you want to delete this project record?", OnSuccess = "DeleteSuccess", HttpMethod = "POST" })
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No Projects Found.</p>
}


@section Scripts {
    @Scripts.Render("~/bundles/form")
    @Scripts.Render("~/bundles/table")
}