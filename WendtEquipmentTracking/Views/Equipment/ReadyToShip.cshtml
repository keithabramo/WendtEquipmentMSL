@model BillOfLandingModel

<table class="table table-condensed table-hover table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandingEquipments[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandingEquipments[0].Equipment.EquipmentName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandingEquipments[0].Equipment.ReadyToShip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandingEquipments[0].Equipment.LeftToShip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandingEquipments[0].Equipment.ShippedQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandingEquipments[0].Equipment.Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.BillOfLandingEquipments.Count(); i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => modelItem.BillOfLandingEquipments[i].EquipmentId)
                    @Html.CheckBoxFor(modelItem => modelItem.BillOfLandingEquipments[i].Checked)
                </td>
                <td>
                    @Html.EditorFor(modelItem => modelItem.BillOfLandingEquipments[i].Quantity, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.BillOfLandingEquipments[i].Equipment.EquipmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.BillOfLandingEquipments[i].Equipment.ReadyToShip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.BillOfLandingEquipments[i].Equipment.LeftToShip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.BillOfLandingEquipments[i].Equipment.ShippedQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.BillOfLandingEquipments[i].Equipment.Quantity)
                </td>
            </tr>
        }
    </tbody>
</table>
