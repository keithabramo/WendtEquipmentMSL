@model IList<EquipmentModel>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("ActionNavPartial", ActionNav.UpdateReadyToShip)

@using (Html.BeginForm())
{

    <div class="form-group">
        <div class="col-md-12">
            <table class="table table-condensed table-hover table-bordered table-styled">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].EquipmentName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Priority)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].ReleaseDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].DrawingNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].WorkOrderNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].ShippingTagNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].UnitWeight)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].TotalWeight)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].TotalWeightShipped)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].ReadyToShip)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].ShippedQuantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].LeftToShip)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].FullyShipped)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].CustomsValue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].SalePrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].HTSCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].CountryOfOrigin)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].Notes)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].AutoShipFile)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].SalesOrderNumber)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Count(); ++i)
                    {
                        <tr>
                            @if (Model[i].BillOfLadingEquipments.Count() > 0)
                            {
                                <td data-toggle="collapse" data-target="#accordion@(Model[i].EquipmentId)" class="expand text-center"><span class="glyphicon glyphicon-plus text-primary"></span></td>
                            }
                            else
                            {
                                <td></td>
                            }
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].EquipmentName)
                                @Html.DisplayFor(modelItem => modelItem[i].EquipmentName)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].Priority)
                                @Html.DisplayFor(modelItem => modelItem[i].Priority)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].ReleaseDate)
                                @Html.DisplayFor(modelItem => modelItem[i].ReleaseDate)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].DrawingNumber)
                                @Html.DisplayFor(modelItem => modelItem[i].DrawingNumber)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].WorkOrderNumber)
                                @Html.DisplayFor(modelItem => modelItem[i].WorkOrderNumber)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].Quantity)
                                @Html.DisplayFor(modelItem => modelItem[i].Quantity)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].ShippingTagNumber)
                                @Html.DisplayFor(modelItem => modelItem[i].ShippingTagNumber)
                            </td>
                            <td class="long-column">
                                @Html.HiddenFor(modelItem => modelItem[i].Description)
                                @Html.DisplayFor(modelItem => modelItem[i].Description)
                            </td>
                            <td class="@Model[i].Indicators.UnitWeightColor.ToString()">
                                @Html.HiddenFor(modelItem => modelItem[i].UnitWeight)
                                @Html.DisplayFor(modelItem => modelItem[i].UnitWeight)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].TotalWeight)
                                @Html.DisplayFor(modelItem => modelItem[i].TotalWeight)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].TotalWeightShipped)
                                @Html.DisplayFor(modelItem => modelItem[i].TotalWeightShipped)
                            </td>
                            <td class="@Model[i].Indicators.ReadyToShipColor.ToString()">
                                @Html.HiddenFor(modelItem => modelItem[i].EquipmentId)
                                @Html.EditorFor(modelItem => modelItem[i].ReadyToShip, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                            <td class="@Model[i].Indicators.ShippedQtyColor.ToString()">
                                @Html.HiddenFor(modelItem => modelItem[i].ShippedQuantity)
                                @Html.DisplayFor(modelItem => modelItem[i].ShippedQuantity)
                            </td>
                            <td class="@Model[i].Indicators.LeftToShipColor.ToString()">
                                @Html.HiddenFor(modelItem => modelItem[i].LeftToShip)
                                @Html.DisplayFor(modelItem => modelItem[i].LeftToShip)
                            </td>
                            <td class="@Model[i].Indicators.FullyShippedColor.ToString()">
                                @Html.HiddenFor(modelItem => modelItem[i].FullyShipped)
                                @if (Model[i].FullyShipped.HasValue && Model[i].FullyShipped.Value == true)
                                {
                                    @:Yes
                                }
                                else if (Model[i].FullyShipped.HasValue && Model[i].FullyShipped.Value == false)
                                {
                                    @:No
                                }
                                else
                                {
                                    @:NA
                                }
                            </td>
                            <td class="@Model[i].Indicators.CustomsValueColor.ToString()">
                                @Html.HiddenFor(modelItem => modelItem[i].CustomsValue)
                                @Html.DisplayFor(modelItem => modelItem[i].CustomsValue)
                            </td>
                            <td class="@Model[i].Indicators.SalePriceColor.ToString()">
                                @Html.HiddenFor(modelItem => modelItem[i].SalePrice)
                                @Html.DisplayFor(modelItem => modelItem[i].SalePrice)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].HTSCode)
                                @Html.DisplayFor(modelItem => modelItem[i].HTSCode)
                            </td>
                            <td class="@Model[i].Indicators.CountyOfOriginColor.ToString()">
                                @Html.HiddenFor(modelItem => modelItem[i].CountryOfOrigin)
                                @Html.DisplayFor(modelItem => modelItem[i].CountryOfOrigin)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].Notes)
                                @Html.DisplayFor(modelItem => modelItem[i].Notes)
                            </td>
                            <td>
                                @Html.HiddenFor(modelItem => modelItem[i].AutoShipFile)
                                @Html.DisplayFor(modelItem => modelItem[i].AutoShipFile)
                            </td>
                            <td class="@Model[i].Indicators.SalesOrderNumberColor.ToString()">
                                @Html.HiddenFor(modelItem => modelItem[i].SalesOrderNumber)
                                @Html.DisplayFor(modelItem => modelItem[i].SalesOrderNumber)
                            </td>
                        </tr>
                        if (Model[i].BillOfLadingEquipments.Count() > 0)
                        {
                            <tr class="collapse info" id="accordion@(Model[i].EquipmentId)">
                                <td colspan="12" id="BOL@(Model[i].EquipmentId)">
                                    @Html.Partial("BOLsAssociatedToEquipment", Model[i].BillOfLadingEquipments)
                                </td>
                                <td colspan="15"></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" value="Save" class="btn btn-primary" /> | @Html.ActionLink("Cancel", "Index", "Home")
        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/form")
    @Scripts.Render("~/bundles/table")
}
