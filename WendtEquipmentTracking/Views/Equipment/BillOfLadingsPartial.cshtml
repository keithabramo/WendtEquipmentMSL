@model IEnumerable<BillOfLadingEquipmentModel>

<table class="table table-condensed table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLading.BillOfLadingNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLading.DateShipped)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLading.ShippedFrom)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(b => b.BillOfLading.IsCurrentRevision))
        {
            <tr>
                <td class="text-center">
                    <a href="@Url.Action("Details", "BillOfLading", new { billOfLadingNumber = item.BillOfLading.BillOfLadingNumber })">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </a>
                </td>
                <td class="@item.BillOfLading.Indicators.BillOfLadingNumberColor.ToString()">
                    @Html.DisplayFor(modelItem => item.BillOfLading.BillOfLadingNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td class="@item.BillOfLading.Indicators.DateShippedNumberColor.ToString()">
                    @Html.DisplayFor(modelItem => item.BillOfLading.DateShipped)
                </td>
                <td class="@item.BillOfLading.Indicators.ShippedFromColor.ToString()">
                    @Html.DisplayFor(modelItem => item.BillOfLading.ShippedFrom)
                </td>
            </tr>
        }
    </tbody>

</table>
