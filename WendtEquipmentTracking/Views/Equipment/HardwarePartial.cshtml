@model IList<EquipmentSelectionModel>

<Label>Select Hardware</Label>

<table class="table table-striped table-condensed table-styled">
    <thead>
        <tr>
            <th>
                <input type="checkbox" checked="checked" /> Select All
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].IsHardware)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].EquipmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DrawingNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].WorkOrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ShippingTagNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].UnitWeight)
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    @Html.CheckBoxFor(modelItem => modelItem[i].Checked, htmlAttributes: new { @checked = true })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem[i].EquipmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem[i].Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem[i].ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem[i].DrawingNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem[i].WorkOrderNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem[i].Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem[i].ShippingTagNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem[i].Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem[i].UnitWeight)
                </td>
            </tr>
        }
    </tbody>
</table>