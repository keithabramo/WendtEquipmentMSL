@model HardwareKitModel

<Label>Select Hardware</Label>

<table class="table table-condensed table-hover table-bordered table-styled">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HardwareKitEquipments[0].Equipment.EquipmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HardwareKitEquipments[0].Equipment.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HardwareKitEquipments[0].Equipment.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HardwareKitEquipments[0].Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.HardwareKitEquipments.Count(); i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.HardwareKitEquipments[i].Equipment.EquipmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.HardwareKitEquipments[i].Equipment.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.HardwareKitEquipments[i].Equipment.Quantity)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => modelItem.HardwareKitEquipments[i].EquipmentId)
                    @Html.EditorFor(modelItem => modelItem.HardwareKitEquipments[i].Quantity, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>
        }
    </tbody>
</table>