@model IEnumerable<BillOfLandingEquipmentModel>

<table class="table table-condensed table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLanding.BillOfLandingNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLanding.DateShipped)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(b => b.BillOfLanding.IsCurrentRevision))
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details", "BillOfLanding", new { billOfLandingNumber = item.BillOfLanding.BillOfLandingNumber })" class="text-center">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillOfLanding.BillOfLandingNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillOfLanding.DateShipped)
                </td>
                
            </tr>
        }
    </tbody>

</table>
