                <td>
                    @Html.DisplayFor(modelItem => item.DateShippedToStorage)
                </td>
                <td class="text-nowrap">
                    @Html.ActionLink("Edit", "Edit", new { id = item.EquipmentId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.EquipmentId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EquipmentId })
                </td>
            </tr>
        }
    </tbody>
</table>
} else
{
    <p>It looks like this project does not have equipment to track yet. What would you like to do?</p>
    <ul>
        <li>
            Import
        </li>
        <li>
            Create
        </li>
        <li>
            Choose a different project
        </li>
    </ul>
}
