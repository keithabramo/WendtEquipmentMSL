                @Html.DisplayNameFor(model => model.ReadyToShip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeftToShip)
            </th>
