                    @Html.DisplayFor(modelItem => item.FullyShipped)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateShipped)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomsValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HTSCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryOfOrigin)
                </td>
