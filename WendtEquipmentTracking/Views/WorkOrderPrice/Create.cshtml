@model WorkOrderPriceModel

@{
    ViewBag.Title = "Create";
}

@Html.Partial("ActionNavPartial", ActionNav.Nothing)

<h4>Work Order Price <br /><small>Create</small></h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.WorkOrderNumber)
                    @Html.EditorFor(model => model.WorkOrderNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.WorkOrderNumber, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CostPrice)
                    <div class="input-group">
                        <span class="input-group-addon">$</span>
                        @Html.EditorFor(model => model.CostPrice, new { htmlAttributes = new { @class = "form-control money" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.CostPrice, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SalePrice)
                    <div class="input-group">
                        <span class="input-group-addon">$</span>
                        @Html.EditorFor(model => model.SalePrice, new { htmlAttributes = new { @class = "form-control money" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.SalePrice, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ReleasedPercent)
                    <div class="input-group">
                        @Html.EditorFor(model => model.ReleasedPercent, new { htmlAttributes = new { @class = "form-control" } })
                        <span class="input-group-addon">%</span>
                    </div>
                    @Html.ValidationMessageFor(model => model.ReleasedPercent, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ShippedPercent)
                    <div class="input-group">
                        @Html.EditorFor(model => model.ShippedPercent, new { htmlAttributes = new { @class = "form-control" } })
                        <span class="input-group-addon">%</span>
                    </div>
                    @Html.ValidationMessageFor(model => model.ShippedPercent, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" /> | @Html.ActionLink("Cancel", "Index")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/form")
}
