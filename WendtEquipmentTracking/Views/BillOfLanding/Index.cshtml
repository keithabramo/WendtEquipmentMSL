@model EquipmentModel

<table class="table table-condensed table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandings[0].BillOfLandingNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandings[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandings[0].DateShipped)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandings[0].ShippedFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandings[0].ShipToCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandings[0].ShipToAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandings[0].ShipToCSZ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandings[0].ShipToPhoneFax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandings[0].ShipToContact1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillOfLandings[0].ShipToContact2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BillOfLandings.Where(b => b.IsCurrentRevision))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BillOfLandingNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateShipped)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipToCompany)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipToAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipToCSZ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipToPhoneFax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipToContact1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipToContact2)
                </td>
                <td>
                    @Ajax.ActionLink("Edit", "Edit", "BillOfLanding", new { Id = item.BillOfLandingId }, new AjaxOptions { UpdateTargetId = "BOLDialogs", InsertionMode = InsertionMode.Replace, OnSuccess = "OnAjaxFinish" }, new { @class = "edit-bol" }) |
                    @Ajax.ActionLink("View Revisions", "Details", "BillOfLanding", new { billOfLandingNumber = item.BillOfLandingNumber }, new AjaxOptions { UpdateTargetId = "BOLDialogs", InsertionMode = InsertionMode.Replace, OnSuccess = "OnAjaxFinish" }, new { @class = "view-bol" }) |
                    @Ajax.ActionLink("Delete", "Delete", "BillOfLanding", new { Id = item.BillOfLandingId }, new AjaxOptions { UpdateTargetId = "BOLDialogs", InsertionMode = InsertionMode.Replace, OnSuccess = "OnAjaxFinish" }, new { @class = "delete-bol" })
                </td>
            </tr>
        }
        <tr>
            <td colspan="11">
                @Ajax.ActionLink("Add new BOL", "Create", "BillOfLanding", new { EquipmentId = Model.EquipmentId }, new AjaxOptions { UpdateTargetId = "BOLDialogs", InsertionMode = InsertionMode.Replace, OnSuccess = "OnAjaxFinish" }, new { @class = "create-bol btn btn-sm btn-primary" })
            </td>
        </tr>
    </tbody>

</table>
