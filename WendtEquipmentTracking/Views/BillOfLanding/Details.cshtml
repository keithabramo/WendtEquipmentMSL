@model IEnumerable<BillOfLandingModel>
<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Revision History for BOL# - @Model.First().BillOfLandingNumber</h4>
            </div>
            <div class="modal-body">
                <table class="table table-condensed table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Revision)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateShipped)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShippedFrom)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShipToCompany)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShipToAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShipToCSZ)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShipToPhoneFax)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShipToContact1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShipToContact2)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr @(item.IsCurrentRevision ? "class='info'" : "")>
                                <td>
                                    @if (item.IsCurrentRevision)
                                    {
                                        @("Current")
                                    }
                                    else
                                    {
                                        Html.DisplayFor(modelItem => item.Revision);
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateShipped)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShippedFrom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShipToCompany)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShipToAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShipToCSZ)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShipToPhoneFax)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShipToContact1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShipToContact2)
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>


                <div class="modal-footer">
                    <button type="button" class="btn btn-default modal-cancel" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
