@model EquipmentRevisionImportModel

@if (!string.IsNullOrEmpty(TempData["StatusMessage"]?.ToString()))
{
    @Html.Partial("MessagePartial")
}
else
{

    <form id="equipmentRevisionConfigurationForm">
        <hr />
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <table class="table table-condensed table-hover table-bordered table-styled">
                        <tr>
                            <td>Drawing #</td>
                            <td class="warning">
                                @Html.EditorFor(model => model.DrawingNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DrawingNumber, "", new { @class = "text-danger" })

                            </td>
                        </tr>
                        <tr>
                            <td>Rev</td>
                            <td class="warning">
                                @Html.EditorFor(model => model.Revision, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Revision, "", new { @class = "text-danger" })

                            </td>
                        </tr>
                    </table>
                </div>

                <div class="form-group">
                    <input type="submit" value="Continue" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </form>

}