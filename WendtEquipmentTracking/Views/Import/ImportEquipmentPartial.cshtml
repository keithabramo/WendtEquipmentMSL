@model IList<EquipmentImportModel>

@if (Model.Count() > 0)
{

    <p>Review the records below. When you are ready, click "Import Equipment" to import.</p>

    using (Html.BeginForm("ImportEquipment", "Import"))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="submit" value="Import Equipment" class="btn btn-primary" />
        </div>

        <div class="form-group">
            <table class="table table-striped table-condensed">
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].EquipmentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Priority)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].ReleaseDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].DrawingNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].WorkOrderNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].ShippingTagNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].UnitWeight)
                    </th>
                </tr>

            @for (int i = 0; i < Model.Count(); i++)
            {
            <tr>
                <td>
                    @Html.CheckBoxFor(modelItem => modelItem[i].Checked)
                </td>
                <td>
                    @Html.EditorFor(modelItem => modelItem[i].EquipmentName)
                </td>
                <td>
                    @Html.EditorFor(modelItem => modelItem[i].Priority)
                </td>
                <td>
                    @Html.EditorFor(modelItem => modelItem[i].ReleaseDate)
                </td>
                <td>
                    @Html.EditorFor(modelItem => modelItem[i].DrawingNumber)
                </td>
                <td>
                    @Html.EditorFor(modelItem => modelItem[i].WorkOrderNumber)
                </td>
                <td>
                    @Html.EditorFor(modelItem => modelItem[i].Quantity)
                </td>
                <td>
                    @Html.EditorFor(modelItem => modelItem[i].ShippingTagNumber)
                </td>
                <td>
                    @Html.EditorFor(modelItem => modelItem[i].Description)
                </td>
                <td>
                    @Html.EditorFor(modelItem => modelItem[i].UnitWeight)
                </td>
            </tr>
            }

            </table>
        </div>
        <div class="form-group">
            <input type="submit" value="Import Equipment" class="btn btn-primary" />
        </div>
    }
}
else
{
    <p>Sorry, no rows were found for import in the sheets you selected.</p>
}
