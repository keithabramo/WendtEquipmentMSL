@{
    ViewBag.Title = "Index";
}

@Html.Partial("ActionNavPartial", ActionNav.ImportEquipment)

<h3 class="text-center col-sm-6 center-block"><strong>@ViewBag.ProjectNumber</strong></h3>


<h4>Import Data @Html.ActionLink("Import Equipment", "RawEquipment", "Import", null, new { @class = "btn btn-sm btn-primary pull-right" })
<br /><small>Drag and drop the excel document you would like to import.</small></h4>
<hr/>


@using (Html.BeginForm("SelectEquipmentFile", "Import", FormMethod.Post, new { enctype = "multipart/form-data", @class = "dropzone", id = "myDropzone" }))
{
}

<div id="equipmentConfiguration">
    @Html.Action("EquipmentConfigurationPartial")
</div>


<div id="equipmentRows" class="collapse">
    @Html.Partial("EquipmentTablePartial")
</div>

@section Scripts {
    <script type="text/javascript">

        var priorities = [];

        @foreach (var priority in ViewBag.Priorities)
        {
            @:priorities.push(@priority);
        }

    </script>


    @Styles.Render("~/Content/dropzone")

    @Scripts.Render("~/bundles/dropzone")
    @Scripts.Render("~/bundles/form")
    @Scripts.Render("~/bundles/editor")
    @Scripts.Render("~/bundles/importEquipment")
}
