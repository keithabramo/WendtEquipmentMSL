@model ImportModel

@{
    ViewBag.Title = "Index";
}

@Html.Partial("ActionNavPartial", ActionNav.ImportWorkOrderPrice)

<h4>Import Work Order Prices <br /><small>Select the excel document containing the work order prices you would like to import.</small></h4>

<div class="alert alert-info"><p><a href="~/Files/WorkOrderPriceTemplate.xlsx" target="_blank" class="alert-link">Click Here</a> to download the template file needed for importing work order prices</p></div>


@using (Html.BeginForm("WorkOrderPrice", "Import", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form">
        <hr />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.File)
                        @Html.TextBoxFor(model => model.File, new { @class = "form-control", type = "file" })
                        @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                        <input type="submit" value="Continue" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/form")
    @Scripts.Render("~/bundles/import")
}
