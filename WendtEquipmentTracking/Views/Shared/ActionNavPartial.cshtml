@model ActionNav

    <div class="btn-group" role="group" aria-label="actions">
        @Html.ActionLink("Equipment Listing", "Index", "Home", null, new { @class = "btn " + (Model == ActionNav.MSL ? "btn-secondary" : "btn-primary") })

        @if (Html.UserIsInRole(UserRoles.ReadWrite))
        {
            <div class="btn-group">
                <button type="button" class="btn @(Model == ActionNav.ImportBOMRevision || Model == ActionNav.ImportBOM || Model == ActionNav.ImportEquipment || Model == ActionNav.ImportWorkOrderPrice || Model == ActionNav.ImportBroker || Model == ActionNav.ImportHardwareCommercialCode || Model == ActionNav.ImportPriority || Model == ActionNav.ImportVendor ? "btn-secondary" : "btn-primary") dropdown-toggle" data-toggle="dropdown">
                    Import
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("BOM", "Equipment", "Import", null, new { @class = (Model == ActionNav.ImportBOM ? "dropdown-secondary" : "dropdown-primary") })</li>
                    <li>@Html.ActionLink("BOM Revision", "EquipmentRevision", "Import", null, new { @class = (Model == ActionNav.ImportBOMRevision ? "dropdown-secondary" : "dropdown-primary") })</li>
                    <li>@Html.ActionLink("Equipment", "RawEquipment", "Import", null, new { @class = (Model == ActionNav.ImportEquipment ? "dropdown-secondary" : "dropdown-primary") })</li>
                    <li>@Html.ActionLink("Work Order Prices", "WorkOrderPrice", "Import", null, new { @class = (Model == ActionNav.ImportWorkOrderPrice ? "dropdown-secondary" : "dropdown-primary") })</li>
                    <li>@Html.ActionLink("Priorities", "Priority", "Import", null, new { @class = (Model == ActionNav.ImportPriority ? "dropdown-secondary" : "dropdown-primary") })</li>
                    <li>@Html.ActionLink("Vendors", "Vendor", "Import", null, new { @class = (Model == ActionNav.ImportVendor ? "dropdown-secondary" : "dropdown-primary") })</li>
                    <li>@Html.ActionLink("Brokers", "Broker", "Import", null, new { @class = (Model == ActionNav.ImportBroker ? "dropdown-secondary" : "dropdown-primary") })</li>
                    <li>@Html.ActionLink("Hard\\Comm Codes", "HardwareCommercialCode", "Import", null, new { @class = (Model == ActionNav.ImportHardwareCommercialCode ? "dropdown-secondary" : "dropdown-primary") })</li>
                </ul>
            </div>
            @Html.ActionLink("Create BOL", "Create", "BillOfLading", null, new { @class = "btn " + (Model == ActionNav.CreateBOL ? "btn-secondary" : "btn-primary") })
            @Html.ActionLink("Create Hardware Kit", "Create", "HardwareKit", null, new { @class = "btn " + (Model == ActionNav.CreateHardwareKit ? "btn-secondary" : "btn-primary") })
            @Html.ActionLink("Priorities", "Index", "Priority", null, new { @class = "btn " + (Model == ActionNav.Priorities ? "btn-secondary" : "btn-primary") })
            @Html.ActionLink("BOLs", "Index", "BillOfLading", null, new { @class = "btn " + (Model == ActionNav.BillOfLandings ? "btn-secondary" : "btn-primary") })
            @Html.ActionLink("Hardware Kits", "Index", "HardwareKit", null, new { @class = "btn " + (Model == ActionNav.HardwareKits ? "btn-secondary" : "btn-primary") })
            @Html.ActionLink("Work Order Prices", "Index", "WorkOrderPrice", null, new { @class = "btn " + (Model == ActionNav.WorkOrderPrices ? "btn-secondary" : "btn-primary") })
        }
    </div>
