@model IEnumerable<PriorityModel>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("ActionNavPartial", ActionNav.Priorities)

<h4>Priorities</h4>

@if (Html.UserIsInRole(UserRoles.ReadWrite))
{
    <p>
        @Html.ActionLink("Create New Priority", "Create", null, new { @class = "btn btn-sm btn-primary" })
    </p>
}
@if (Model.Count() > 0)
{
    <table class="table table-condensed table-hover table-bordered table-styled my-datatable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PriorityNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EquipmentName)
                </th>
                @if (Html.UserIsInRole(UserRoles.ReadWrite))
            {
                    <th></th>
            }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriorityNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EquipmentName)
                    </td>
                    @if (Html.UserIsInRole(UserRoles.ReadWrite))
                    {
                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.PriorityId }) |
                        @Ajax.ActionLink("Delete", "Delete", new { id = item.PriorityId }, new AjaxOptions { Confirm = "Are you sure you want to delete this priority record?", OnSuccess = "DeleteSuccess", HttpMethod = "POST" })
                    </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No Priorities Found.</p>
}


@section Scripts {
    @Scripts.Render("~/bundles/form")
    @Scripts.Render("~/bundles/table")
}